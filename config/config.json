      "timeout": 30000
    }
  },
  "server": {
    "port": 3000,
    "enableCors": true
  },
  "logging": {
    "level": "info",
    "enableConsole": true,
    "enableFile": false,
    "filePath": "./logs/app.log"
  },
  "modelAliases": {
    "chat-model": "gpt-3.5-turbo",
    "advanced-model": "gpt-4",
    "fast-model": "gpt-3.5-turbo-16k"
